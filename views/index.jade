html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
    include shared/css
  body
    .container-fluid
      .section
        .row
          form.col.s12.m4.offset-m4.l4.offset-l4.login.center-align.hoverable(action="/" method="post")
            .row
              .input-field.center-align.s12
                input(type="text" id="username" name="username" class="validate")
                label(for="username") Username
            .row
              .input-field.center-align.s12
                input(type="password" id="password" name="password" class="validate")
                label(for="password") Password
            .row
              .input-field.center-align.s12
                button.red.lighten-1(class="btn waves-effect waves-light" type="submit" name="action") Login
            .row
              ul.col.s12.center-align.collapsible(data-collapsible='accordion')
                li
                  .collapsible-header.teal.lighten-2.white-text
                    i.material-icons settings
                    | Advanced Configuration
                  .collapsible-body.white.teal-text
                    br
                    label(for="host") Host
                    input(id="host" type="text" name="host")
                    label(for="domain") Domain
                    input(id="domain" type="text" name= "domain")
                    label(for="port") Port
                    input(id="port" type="text" name= "port")
                    br
    script(src="/jquery/dist/jquery.min.js")
    script(src="/Materialize/dist/js/materialize.min.js")
    block script
      script.


